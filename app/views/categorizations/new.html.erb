<h1>Categorize</h1>
<%= form_for([@kitten, @categorization]) do |f| %>
  <% @categorization.errors.any? %>
      <% @categorization.errors.full_messages.each do |msg| %>
        <div class="errors"><%= msg %></div>
      <% end %>
<%= image_tag @kitten.image, class: "kitten-image" %>
<%= f.collection_select(:category_id,
                      Category.order(:name),
                      :id, :name,
                      {prompt: "Please Choose a Category"})%>
<%= f.submit "Add Category"%>
<% end %>
